/**
 * @fileoverview Firestore Security Rules for PetLife application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data. Each user can only
 * access their own data and the data of their pets.
 *
 * Data Structure:
 * The data is structured hierarchically under /users/{userId}, with pets, meal plans,
 * supplement recommendations, and activity records as subcollections. This structure
 * ensures clear ownership and avoids the need for complex queries in the rules.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own user documents.
 * - Users can only create, read, update, and delete pets and associated data (meal plans,
 *   supplement recommendations, activity records) that belong to them.
 * - Listing of user documents is disallowed to prevent unauthorized data discovery.
 *
 * Denormalization for Authorization:
 *  The data model enforces that all documents are located under a path that represents
 *  ownership.  Authorization is determined by validating that the `request.auth.uid`
 *  matches the `userId` in the path.
 *
 *  There is no denormalization for this security rule set.
 *
 * Structural Segregation:
 *  Private user and pet data are stored under the /users/{userId} path, ensuring that
 *  only the owner can access the data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-ownership for user profiles.
     * @path /users/{userId}
     * @allow (create) User with matching userId can create their profile.
     * @allow (get, update, delete) User with matching userId can read, update, and delete their profile.
     * @deny (create) User cannot create a profile with a different userId.
     * @deny (get, update, delete) User cannot read, update, or delete another user's profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for pet profiles.
     * @path /users/{userId}/pets/{petId}
     * @allow (create) User with matching userId can create a pet profile under their user ID.
     * @allow (get, update, delete) User with matching userId can read, update, and delete their pet profiles.
     * @deny (create) User cannot create a pet profile under a different user ID.
     * @deny (get, update, delete) User cannot read, update, or delete another user's pet profiles.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/pets/{petId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for meal plans.
     * @path /users/{userId}/pets/{petId}/mealPlans/{mealPlanId}
     * @allow (create) User with matching userId can create a meal plan under their pet profile.
     * @allow (get, update, delete) User with matching userId can read, update, and delete their meal plans.
     * @deny (create) User cannot create a meal plan under a different user ID or pet ID.
     * @deny (get, update, delete) User cannot read, update, or delete another user's meal plans.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/pets/{petId}/mealPlans/{mealPlanId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for supplement recommendations.
     * @path /users/{userId}/pets/{petId}/supplementRecommendations/{supplementRecommendationId}
     * @allow (create) User with matching userId can create a supplement recommendation under their pet profile.
     * @allow (get, update, delete) User with matching userId can read, update, and delete their supplement recommendations.
     * @deny (create) User cannot create a supplement recommendation under a different user ID or pet ID.
     * @deny (get, update, delete) User cannot read, update, or delete another user's supplement recommendations.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/pets/{petId}/supplementRecommendations/{supplementRecommendationId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for activity records.
     * @path /users/{userId}/pets/{petId}/activityRecords/{activityRecordId}
     * @allow (create) User with matching userId can create an activity record under their pet profile.
     * @allow (get, update, delete) User with matching userId can read, update, and delete their activity records.
     * @deny (create) User cannot create an activity record under a different user ID or pet ID.
     * @deny (get, update, delete) User cannot read, update, or delete another user's activity records.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/pets/{petId}/activityRecords/{activityRecordId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}