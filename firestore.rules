rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profile data. Only the authenticated user can read or write their own profile.
     * @path /users/{userId}
     * @allow (create) - If the authenticated user's UID matches the userId.
     * @allow (get, list, update, delete) - If the authenticated user's UID matches the userId and the document exists.
     * @deny (create) - If the authenticated user's UID does not match the userId.
     * @deny (get, list, update, delete) - If the authenticated user's UID does not match the userId, or the document does not exist.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }

      allow get, list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages pet profiles owned by a specific user. Only the owner can read or write pet profiles.
     * @path /users/{userId}/pets/{petId}
     * @allow (create) - If the authenticated user is the owner of the pet profile and the userId matches.
     * @allow (get, list, update, delete) - If the authenticated user is the owner of the pet profile, the userId matches, and the document exists.
     * @deny (create) - If the authenticated user is not the owner of the pet profile or the userId does not match.
     * @deny (get, list, update, delete) - If the authenticated user is not the owner of the pet profile, the userId does not match, or the document does not exist.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/pets/{petId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }

      allow get, list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages meal plans for a specific pet. Only the owner of the pet can read or write meal plans.
     * @path /users/{userId}/pets/{petId}/mealPlans/{mealPlanId}
     * @allow (create) - If the authenticated user is the owner of the pet.
     * @allow (get, list, update, delete) - If the authenticated user is the owner of the pet and the document exists.
     * @deny (create) - If the authenticated user is not the owner of the pet.
     * @deny (get, list, update, delete) - If the authenticated user is not the owner of the pet, or the document does not exist.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/pets/{petId}/mealPlans/{mealPlanId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }

      allow get, list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages supplement recommendations for a specific pet. Only the owner of the pet can read or write supplement recommendations.
     * @path /users/{userId}/pets/{petId}/supplementRecommendations/{supplementRecommendationId}
     * @allow (create) - If the authenticated user is the owner of the pet.
     * @allow (get, list, update, delete) - If the authenticated user is the owner of the pet and the document exists.
     * @deny (create) - If the authenticated user is not the owner of the pet.
     * @deny (get, list, update, delete) - If the authenticated user is not the owner of the pet, or the document does not exist.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/pets/{petId}/supplementRecommendations/{supplementRecommendationId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }

      allow get, list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages activity records for a specific pet. Only the owner of the pet can read or write activity records.
     * @path /users/{userId}/pets/{petId}/activityRecords/{activityRecordId}
     * @allow (create) - If the authenticated user is the owner of the pet.
     * @allow (get, list, update, delete) - If the authenticated user is the owner of the pet and the document exists.
     * @deny (create) - If the authenticated user is not the owner of the pet.
     * @deny (get, list, update, delete) - If the authenticated user is not the owner of the pet, or the document does not exist.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/pets/{petId}/activityRecords/{activityRecordId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }

      allow get, list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}