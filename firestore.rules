/**
 * @fileoverview Firestore Security Rules for the PetLife application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data. Each user
 * can only access their own data and the data of their pets.  This ownership
 * is determined by the Firestore path (e.g., /users/{userId}/pets/{petId}).
 *
 * Data Structure:
 * Data is organized hierarchically under /users/{userId}, with subcollections
 * for pets, meal plans, supplement recommendations, and activity records.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect user privacy.
 * - The rules explicitly deny any operation that is not explicitly allowed.
 * - Data validation is relaxed during prototyping, focusing on ownership.
 * - All `update` and `delete` operations must verify that the document exists.
 *
 * Denormalization for Authorization:
 * The data structure is already designed for clear ownership, so no extra
 * denormalization is required. The path itself determines the user's access.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces access control for user documents. Only the owner can read or write.
     * @path /users/{userId}
     * @allow (create) User with matching userId can create their own document.
     * @allow (get, update, delete) User with matching userId can get, update, and delete their own document.
     * @deny (create) User cannot create a document with a different userId.
     * @deny (get, update, delete) User cannot get, update, or delete another user's document.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for pet documents. Only the owner can read or write.
     * @path /users/{userId}/pets/{petId}
     * @allow (create) User with matching userId can create a pet document.
     * @allow (get, update, delete) User with matching userId can get, update, and delete their own pet document.
     * @deny (create) User cannot create a pet document with a different userId.
     * @deny (get, update, delete) User cannot get, update, or delete another user's pet document.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/pets/{petId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for meal plan documents. Only the owner can read or write.
     * @path /users/{userId}/pets/{petId}/mealPlans/{mealPlanId}
     * @allow (create) User with matching userId can create a meal plan document.
     * @allow (get, update, delete) User with matching userId can get, update, and delete their own meal plan document.
     * @deny (create) User cannot create a meal plan document with a different userId.
     * @deny (get, update, delete) User cannot get, update, or delete another user's meal plan document.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/pets/{petId}/mealPlans/{mealPlanId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for supplement recommendation documents. Only the owner can read or write.
     * @path /users/{userId}/pets/{petId}/supplementRecommendations/{supplementRecommendationId}
     * @allow (create) User with matching userId can create a supplement recommendation document.
     * @allow (get, update, delete) User with matching userId can get, update, and delete their own supplement recommendation document.
     * @deny (create) User cannot create a supplement recommendation document with a different userId.
     * @deny (get, update, delete) User cannot get, update, or delete another user's supplement recommendation document.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/pets/{petId}/supplementRecommendations/{supplementRecommendationId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for activity record documents. Only the owner can read or write.
     * @path /users/{userId}/pets/{petId}/activityRecords/{activityRecordId}
     * @allow (create) User with matching userId can create an activity record document.
     * @allow (get, update, delete) User with matching userId can get, update, and delete their own activity record document.
     * @deny (create) User cannot create an activity record document with a different userId.
     * @deny (get, update, delete) User cannot get, update, or delete another user's activity record document.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/pets/{petId}/activityRecords/{activityRecordId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}