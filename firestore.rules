/**
 * @fileoverview Firestore Security Rules for PetLife application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, ensuring that users can only access and modify their own data.
 * All data is nested under /users/{userId}, establishing a clear hierarchy of ownership.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/pets/{petId}: Stores pet profiles owned by a specific user.
 * - /users/{userId}/pets/{petId}/activities/{activityId}: Stores activity data for a specific pet.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own user document.
 * - Users can only manage pets and activities associated with their user ID.
 * - Listing of users is disallowed.
 * - No data shape validation is performed beyond verifying the user ID on create operations.
 *
 * Denormalization for Authorization:
 * The data structure inherently denormalizes user ownership through path-based hierarchy,
 * avoiding the need for costly `get()` calls to determine ownership.
 * The userId is present in all documents beneath the /users/{userId} path.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) - Authenticated user can create their own profile if the userId matches their auth UID.
     * @allow (get, update, delete) - Authenticated user can only access their own profile.
     * @deny (list) - Listing all users is not allowed.
     * @deny (create) - An unauthenticated user cannot create a user profile.
     * @deny (update) - An unauthenticated user cannot update a user profile.
     * @deny (delete) - An unauthenticated user cannot delete a user profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to pet profiles for a specific user.
     * @path /users/{userId}/pets/{petId}
     * @allow (create) - Authenticated user can create a pet profile under their user ID if the userId matches.
     * @allow (get, list, update, delete) - Authenticated user can only access and manage pets associated with their user ID.
     * @deny (create) - An unauthenticated user cannot create a pet profile.
     * @deny (update) - An unauthenticated user cannot update a pet profile if not the owner.
     * @deny (delete) - An unauthenticated user cannot delete a pet profile if not the owner.
     * @principle Restricts access to a user's own pet data.
     */
    match /users/{userId}/pets/{petId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to activity data for a specific pet of a specific user.
     * @path /users/{userId}/pets/{petId}/activities/{activityId}
     * @allow (create) - Authenticated user can create an activity under their pet's profile if the userId matches.
     * @allow (get, list, update, delete) - Authenticated user can only access and manage activities associated with their user ID and pet ID.
     * @deny (create) - An unauthenticated user cannot create an activity.
     * @deny (update) - An unauthenticated user cannot update an activity if not the owner.
     * @deny (delete) - An unauthenticated user cannot delete an activity if not the owner.
     * @principle Restricts access to a user's own pet activity data.
     */
    match /users/{userId}/pets/{petId}/activities/{activityId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}