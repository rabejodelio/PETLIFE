/**
 * @fileoverview Firestore Security Rules for PetLife application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data. Each user can only
 * access their own data and the data of their pets.
 *
 * Data Structure:
 * The data is structured hierarchically: /users/{userId}/pets/{petId}/....
 * All data is nested under a specific user's document.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own user document.
 * - Users can only create, read, update, and delete pets that belong to them.
 * - MealPlans, SupplementRecommendations, and ActivityRecords follow the same ownership model.
 * - Listing of users is disallowed.
 *
 * Denormalization for Authorization:
 * The 'userId' field in Pet documents is used to enforce ownership.
 * The 'petId' field in MealPlan, SupplementRecommendation, and ActivityRecord documents
 * is used to enforce ownership, as well as the path.
 *
 * Structural Segregation:
 * Private user data and pet data are stored under the /users/{userId} path, ensuring that only the
 * owner can access them.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with matching user ID can create their own profile.
     * @allow (get, update, delete) - Authenticated user with matching user ID can get, update, or delete their own profile.
     * @deny (create) - Authenticated user cannot create a profile for another user.
     * @deny (get, update, delete) - Authenticated user cannot get, update, or delete another user's profile.
     * @deny (list) - Listing users is not allowed.
     * @principle Enforces document ownership for writes and restricts access to a user's own data.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.id == userId;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.id == userId;
    }

    /**
     * @description Controls access to pet profiles.
     * @path /users/{userId}/pets/{petId}
     * @allow (create) - Authenticated user with matching user ID can create a pet profile for themselves.
     * @allow (get, list, update, delete) - Authenticated user with matching user ID can get, list, update, or delete their own pet profiles.
     * @deny (create) - Authenticated user cannot create a pet profile for another user.
     * @deny (get, list, update, delete) - Authenticated user cannot get, list, update, or delete another user's pet profiles.
     * @principle Enforces document ownership for writes and restricts access to a user's own data.
     */
    match /users/{userId}/pets/{petId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId && request.resource.data.id == petId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.userId == userId && resource.data.id == petId;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.userId == userId && resource.data.id == petId;
    }

    /**
     * @description Controls access to meal plans for a specific pet.
     * @path /users/{userId}/pets/{petId}/mealPlans/{mealPlanId}
     * @allow (create) - Authenticated user with matching user ID can create a meal plan for their pet.
     * @allow (get, list, update, delete) - Authenticated user with matching user ID can get, list, update, or delete their own pet's meal plans.
     * @deny (create) - Authenticated user cannot create a meal plan for another user's pet.
     * @deny (get, list, update, delete) - Authenticated user cannot get, list, update, or delete another user's pet's meal plans.
     * @principle Enforces document ownership for writes and restricts access to a user's own data.
     */
    match /users/{userId}/pets/{petId}/mealPlans/{mealPlanId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.petId == petId && request.resource.data.id == mealPlanId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.petId == petId && resource.data.id == mealPlanId;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.petId == petId && resource.data.id == mealPlanId;
    }

    /**
     * @description Controls access to supplement recommendations for a specific pet.
     * @path /users/{userId}/pets/{petId}/supplementRecommendations/{supplementRecommendationId}
     * @allow (create) - Authenticated user with matching user ID can create a supplement recommendation for their pet.
     * @allow (get, list, update, delete) - Authenticated user with matching user ID can get, list, update, or delete their own pet's supplement recommendations.
     * @deny (create) - Authenticated user cannot create a supplement recommendation for another user's pet.
     * @deny (get, list, update, delete) - Authenticated user cannot get, list, update, or delete another user's pet's supplement recommendations.
     * @principle Enforces document ownership for writes and restricts access to a user's own data.
     */
    match /users/{userId}/pets/{petId}/supplementRecommendations/{supplementRecommendationId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.petId == petId && request.resource.data.id == supplementRecommendationId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.petId == petId && resource.data.id == supplementRecommendationId;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.petId == petId && resource.data.id == supplementRecommendationId;
    }

    /**
     * @description Controls access to activity records for a specific pet.
     * @path /users/{userId}/pets/{petId}/activityRecords/{activityRecordId}
     * @allow (create) - Authenticated user with matching user ID can create an activity record for their pet.
     * @allow (get, list, update, delete) - Authenticated user with matching user ID can get, list, update, or delete their own pet's activity records.
     * @deny (create) - Authenticated user cannot create an activity record for another user's pet.
     * @deny (get, list, update, delete) - Authenticated user cannot get, list, update, or delete another user's pet's activity records.
     * @principle Enforces document ownership for writes and restricts access to a user's own data.
     */
    match /users/{userId}/pets/{petId}/activityRecords/{activityRecordId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.petId == petId && request.resource.data.id == activityRecordId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.petId == petId && resource.data.id == activityRecordId;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.petId == petId && resource.data.id == activityRecordId;
    }
  }
}